@model ProgettoTestWeb.Models.AdminViewModel
@{
    ViewData["Title"] = "Amministrazione Database";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-6 fw-bold text-primary">⚙️ Amministrazione Database</h1>
            <p class="text-muted">Gestione ambulatori, parti del corpo e esami</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg fw-bold">
                🏠 TORNA AL MAIN
            </a>
        </div>
    </div>

    <!-- Messaggi di errore/successo -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>✅ Successo!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.MessaggioErrore))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>❌ Errore!</strong> @Model.MessaggioErrore
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Griglie dati - Layout simile al WinForms -->
    <div class="row">
        <!-- Ambulatori -->
        <div class="col-md-2">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-light text-center">
                    <h5 class="mb-0 fw-bold text-primary">🏥 Ambulatori</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="height: 500px; overflow-y: auto;">
                        <table class="table table-sm table-hover mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th style="width: 15%;">ID</th>
                                    <th style="width: 85%;">Nome</th>
                                </tr>
                            </thead>
                            <tbody id="tabellaAmbulatori">
                                @foreach (var ambulatorio in Model.Ambulatori)
                                {
                                    <tr data-id="@ambulatorio.Id" class="selectable-row">
                                        <td class="text-center">@ambulatorio.Id</td>
                                        <td>@ambulatorio.NomeAmbulatorio</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <div class="btn-group w-100">
                        <button class="btn btn-danger btn-sm fw-bold" id="btnEliminaAmbulatorio"
                                style="font-size: 18px;">
                            ➖
                        </button>
                        <button class="btn btn-success btn-sm fw-bold" id="btnAggiungiAmbulatorio"
                                style="font-size: 18px;">
                            ➕
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Parti del Corpo -->
        <div class="col-md-2">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-light text-center">
                    <h5 class="mb-0 fw-bold text-info">🫀 Parti del Corpo</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="height: 500px; overflow-y: auto;">
                        <table class="table table-sm table-hover mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th style="width: 15%;">ID</th>
                                    <th style="width: 85%;">Nome</th>
                                </tr>
                            </thead>
                            <tbody id="tabellaPartiCorpo">
                                @foreach (var parte in Model.PartiDelCorpo)
                                {
                                    <tr data-id="@parte.Id" class="selectable-row">
                                        <td class="text-center">@parte.Id</td>
                                        <td>@parte.NomeParte</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <div class="btn-group w-100">
                        <button class="btn btn-danger btn-sm fw-bold" id="btnEliminaParteCorpo"
                                style="font-size: 18px;">
                            ➖
                        </button>
                        <button class="btn btn-success btn-sm fw-bold" id="btnAggiungiParteCorpo"
                                style="font-size: 18px;">
                            ➕
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Esami -->
        <div class="col-md-8">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-light text-center">
                    <h5 class="mb-0 fw-bold text-success">🔬 Esami</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="height: 500px; overflow-y: auto;">
                        <table class="table table-sm table-hover mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th style="width: 8%;">ID</th>
                                    <th style="width: 15%;">Cod. Min.</th>
                                    <th style="width: 15%;">Cod. Int.</th>
                                    <th style="width: 35%;">Descrizione</th>
                                    <th style="width: 15%;">Parte Corpo</th>
                                    <th style="width: 12%;">Ambulatori</th>
                                </tr>
                            </thead>
                            <tbody id="tabellaEsami">
                                @foreach (var esame in Model.Esami)
                                {
                                    <tr data-id="@esame.Id" class="selectable-row">
                                        <td class="text-center">@esame.Id</td>
                                        <td>@esame.CodiceMinisteriale</td>
                                        <td>@esame.CodiceInterno</td>
                                        <td>@esame.DescrizioneEsame</td>
                                        <td>@esame.ParteCorpo</td>
                                        <td><small>@esame.AmbulatoriString</small></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <div class="btn-group w-100">
                        <button class="btn btn-danger btn-sm fw-bold" id="btnEliminaEsame"
                                style="font-size: 18px;">
                            ➖
                        </button>
                        <button class="btn btn-success btn-sm fw-bold" id="btnAggiungiEsame"
                                style="font-size: 18px;">
                            ➕
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ==================== MODAL AMBULATORIO ==================== -->
<div class="modal fade" id="modalAggiungiAmbulatorio" tabindex="-1" aria-labelledby="modalAggiungiAmbulatorioLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalAggiungiAmbulatorioLabel">🏥 Aggiungi Ambulatorio</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="nomeAmbulatorio" class="form-label fw-bold">Nome Ambulatorio:</label>
                    <input type="text" class="form-control form-control-lg" id="nomeAmbulatorio"
                           maxlength="100" placeholder="Inserisci nome ambulatorio..." required>
                    <div class="form-text">Massimo 100 caratteri</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">❌ Annulla</button>
                <button type="button" class="btn btn-primary fw-bold" id="btnSalvaAmbulatorio">💾 Salva</button>
            </div>
        </div>
    </div>
</div>

<!-- ==================== MODAL PARTE DEL CORPO ==================== -->
<div class="modal fade" id="modalAggiungiParteCorpo" tabindex="-1" aria-labelledby="modalAggiungiParteCorpoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="modalAggiungiParteCorpoLabel">🫀 Aggiungi Parte del Corpo</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="nomeParteCorpo" class="form-label fw-bold">Nome Parte del Corpo:</label>
                    <input type="text" class="form-control form-control-lg" id="nomeParteCorpo"
                           maxlength="100" placeholder="Inserisci nome parte del corpo..." required>
                    <div class="form-text">Massimo 100 caratteri</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">❌ Annulla</button>
                <button type="button" class="btn btn-info fw-bold" id="btnSalvaParteCorpo">💾 Salva</button>
            </div>
        </div>
    </div>
</div>

<!-- ==================== MODAL ESAME ==================== -->
<div class="modal fade" id="modalAggiungiEsame" tabindex="-1" aria-labelledby="modalAggiungiEsameLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="AggiungiEsame" method="post">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="modalAggiungiEsameLabel">🔬 Aggiungi Esame</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NuovoEsame.CodiceMinisteriale" class="form-label fw-bold">Codice Ministeriale:</label>
                                <input asp-for="NuovoEsame.CodiceMinisteriale" class="form-control"
                                       maxlength="10" placeholder="es. 87.03.1" required>
                                <span asp-validation-for="NuovoEsame.CodiceMinisteriale" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NuovoEsame.CodiceInterno" class="form-label fw-bold">Codice Interno:</label>
                                <input asp-for="NuovoEsame.CodiceInterno" class="form-control"
                                       maxlength="10" placeholder="es. RX001" required>
                                <span asp-validation-for="NuovoEsame.CodiceInterno" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NuovoEsame.DescrizioneEsame" class="form-label fw-bold">Descrizione Esame:</label>
                        <input asp-for="NuovoEsame.DescrizioneEsame" class="form-control"
                               maxlength="100" placeholder="es. RX cranio standard" required>
                        <span asp-validation-for="NuovoEsame.DescrizioneEsame" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NuovoEsame.ParteCorpo" class="form-label fw-bold">Parte del Corpo:</label>
                                <select asp-for="NuovoEsame.ParteCorpo" class="form-select" required>
                                    <option value="">-- Seleziona una parte --</option>
                                    @foreach (var parte in Model.PartiDelCorpo)
                                    {
                                        <option value="@parte.NomeParte">@parte.NomeParte</option>
                                    }
                                </select>
                                <span asp-validation-for="NuovoEsame.ParteCorpo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Ambulatori associati:</label>
                                <div class="border rounded p-3" style="height: 150px; overflow-y: auto; background-color: #f8f9fa;">
                                    @for (int i = 0; i < Model.Ambulatori.Count; i++)
                                    {
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox"
                                                   name="NuovoEsame.AmbulatoriSelezionati"
                                                   value="@Model.Ambulatori[i].NomeAmbulatorio"
                                                   id="amb_@i">
                                            <label class="form-check-label fw-medium" for="amb_@i">
                                                @Model.Ambulatori[i].NomeAmbulatorio
                                            </label>
                                        </div>
                                    }
                                </div>
                                <div class="text-danger mt-1" id="ambulatoriError"></div>
                                <div class="form-text">Selezionare almeno un ambulatorio</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">❌ Annulla</button>
                    <button type="submit" class="btn btn-success fw-bold">💾 Salva Esame</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- ==================== MODAL MESSAGGI ==================== -->
<div class="modal fade" id="messaggiModal" tabindex="-1" aria-labelledby="messaggiModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="messaggiModalLabel">💬 Messaggio</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="messaggiModalBody">
                <!-- Contenuto dinamico -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">✅ OK</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/esami-admin.js"></script>

    <style>
        /* Stili specifici per admin */
        .selectable-row {
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .selectable-row:hover {
                background-color: #e3f2fd !important;
                transform: scale(1.01);
            }

            .selectable-row.table-active {
                background-color: #0d6efd !important;
                color: white !important;
                font-weight: bold;
            }

        .card-header h5 {
            font-size: 18px;
            margin: 0;
        }

        .btn-group .btn {
            font-size: 18px;
            font-weight: bold;
            min-height: 40px;
        }

        .table-responsive {
            border: 1px solid #dee2e6;
            border-radius: 6px;
        }

        .table th {
            font-weight: bold;
            font-size: 13px;
            color: #495057;
            background-color: #f8f9fa !important;
            border-bottom: 2px solid #dee2e6;
            text-align: center;
        }

        .table td {
            font-size: 13px;
            vertical-align: middle;
            border-bottom: 1px solid #e9ecef;
        }
    </style>
}