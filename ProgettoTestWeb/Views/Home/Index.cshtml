@model ProgettoTestWeb.Models.MainViewModel
@{
    ViewData["Title"] = "Gestione Esami - Main";
}

<div class="container-fluid p-3">
    <!-- Header con ricerca -->
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">🔍 Ricerca Esami</h5>
                </div>
                <div class="card-body">
                    <div class="row align-items-end">
                        <div class="col-md-2">
                            <label for="campoRicerca" class="form-label small">Campo di ricerca:</label>
                            <select id="campoRicerca" class="form-select form-select-sm" asp-for="CampoRicerca">
                                @foreach (var campo in Model.CampiRicercaDisponibili)
                                {
                                    <option value="@campo">@campo</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="testoRicerca" class="form-label small">Testo da cercare:</label>
                            <input type="text" id="testoRicerca" class="form-control form-control-sm"
                                   placeholder="Inserisci testo di ricerca..." asp-for="TestoRicerca" maxlength="100" />
                        </div>
                        <div class="col-md-3">
                            <button id="btnCerca" class="btn btn-primary btn-sm me-2">
                                <i class="bi bi-search"></i> CERCA
                            </button>
                            <button id="btnVediTutti" class="btn btn-secondary btn-sm">
                                <i class="bi bi-list"></i> VEDI TUTTI
                            </button>
                        </div>
                        <div class="col-md-3 text-end">
                            <a href="@Url.Action("Index", "Admin")" class="btn btn-warning btn-sm">
                                <i class="bi bi-gear"></i> ADMIN DATABASE
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pannelli principali - Layout WinForms identico -->
    <div class="row mb-3">
        <!-- Ambulatori -->
        <div class="col-md-4">
            <div class="card h-100 winforms-panel">
                <div class="card-header winforms-header text-center">
                    <h6 class="mb-0 fw-bold">🏥 AMBULATORI</h6>
                </div>
                <div class="card-body p-2">
                    <!-- ListBox Ambulatori -->
                    <div class="winforms-listbox-container">
                        <select id="listAmbulatori" class="winforms-listbox" size="15" style="width: 100%;">
                            @foreach (var ambulatorio in Model.Ambulatori)
                            {
                                <option value="@ambulatorio">@ambulatorio</option>
                            }
                        </select>
                    </div>

                    <!-- Bottoni sotto la ListBox -->
                    <div class="winforms-buttons-container mt-2">
                        <div class="row g-1">
                            <div class="col-6">
                                <button id="btnAmbulatorioSuccessivo" class="btn btn-sm btn-outline-primary w-100">
                                    <i class="bi bi-arrow-right"></i> Successivo
                                </button>
                            </div>
                            <div class="col-6">
                                <button id="btnAmbulatorioReset" class="btn btn-sm btn-outline-secondary w-100">
                                    <i class="bi bi-arrow-counterclockwise"></i> Reset
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Parti del Corpo -->
        <div class="col-md-4">
            <div class="card h-100 winforms-panel">
                <div class="card-header winforms-header text-center">
                    <h6 class="mb-0 fw-bold">🫀 PARTI DEL CORPO</h6>
                </div>
                <div class="card-body p-2">
                    <!-- ListBox Parti del Corpo -->
                    <div class="winforms-listbox-container">
                        <select id="listPartiCorpo" class="winforms-listbox" size="15" style="width: 100%;">
                            <!-- Popolato dinamicamente -->
                        </select>
                    </div>

                    <!-- Bottoni sotto la ListBox -->
                    <div class="winforms-buttons-container mt-2">
                        <div class="row g-1">
                            <div class="col-4">
                                <button id="btnParteCorpoPrecedente" class="btn btn-sm btn-outline-secondary w-100">
                                    <i class="bi bi-arrow-left"></i> Prec.
                                </button>
                            </div>
                            <div class="col-4">
                                <button id="btnParteCorpoSuccessivo" class="btn btn-sm btn-outline-primary w-100">
                                    <i class="bi bi-arrow-right"></i> Succ.
                                </button>
                            </div>
                            <div class="col-4">
                                <button id="btnParteCorpoReset" class="btn btn-sm btn-outline-secondary w-100">
                                    <i class="bi bi-arrow-counterclockwise"></i> Reset
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Esami -->
        <div class="col-md-4">
            <div class="card h-100 winforms-panel">
                <div class="card-header winforms-header text-center">
                    <h6 class="mb-0 fw-bold">🔬 ESAMI</h6>
                </div>
                <div class="card-body p-2">
                    <!-- ListBox Esami -->
                    <div class="winforms-listbox-container">
                        <select id="listEsami" class="winforms-listbox" size="15" style="width: 100%;">
                            <!-- Popolato dinamicamente -->
                        </select>
                    </div>

                    <!-- Bottoni sotto la ListBox -->
                    <div class="winforms-buttons-container mt-2">
                        <div class="row g-1">
                            <div class="col-4">
                                <button id="btnEsamePrecedente" class="btn btn-sm btn-outline-secondary w-100">
                                    <i class="bi bi-arrow-left"></i> Prec.
                                </button>
                            </div>
                            <div class="col-8">
                                <button id="btnAggiungiEsame" class="btn btn-sm btn-success w-100 fw-bold">
                                    <i class="bi bi-plus-circle"></i> AGGIUNGI ESAME
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- DataGridView degli esami selezionati - Identico a WinForms -->
    <div class="row">
        <div class="col-md-12">
            <div class="card winforms-panel">
                <div class="card-header winforms-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-bold">📋 ESAMI SELEZIONATI</h6>
                    <div class="winforms-grid-buttons">
                        <button id="btnSpostaSu" class="btn btn-sm btn-outline-primary me-1" title="Sposta Su">
                            <i class="bi bi-arrow-up"></i>
                        </button>
                        <button id="btnSpostaGiu" class="btn btn-sm btn-outline-primary me-1" title="Sposta Giù">
                            <i class="bi bi-arrow-down"></i>
                        </button>
                        <button id="btnEliminaSelezionato" class="btn btn-sm btn-outline-danger" title="Elimina">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="winforms-datagrid-container">
                        <table id="dataGridEsamiSelezionati" class="table table-sm table-hover winforms-datagrid mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 15%;" class="text-center">Codice Ministeriale</th>
                                    <th style="width: 15%;" class="text-center">Codice Interno</th>
                                    <th style="width: 40%;" class="text-center">Descrizione Esame</th>
                                    <th style="width: 15%;" class="text-center">Ambulatorio</th>
                                    <th style="width: 15%;" class="text-center">Parte del Corpo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Popolato dinamicamente -->
                                <tr class="empty-row">
                                    <td colspan="5" class="text-center text-muted py-4">
                                        <em>Nessun esame selezionato. Utilizzare "AGGIUNGI ESAME" per aggiungere esami alla lista.</em>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="row">
                        <div class="col-md-6">
                            <small class="text-muted">
                                <strong>Totale esami selezionati:</strong> <span id="contatoreEsami">0</span>
                            </small>
                        </div>
                        <div class="col-md-6 text-end">
                            <button id="btnSalvaEsami" class="btn btn-primary btn-sm me-2">
                                <i class="bi bi-save"></i> SALVA LISTA
                            </button>
                            <button id="btnPulisciLista" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-x-circle"></i> PULISCI TUTTO
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal per messaggi (identico a MessageBox WinForms) -->
<div class="modal fade" id="messageBoxModal" tabindex="-1" aria-labelledby="messageBoxModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content winforms-messagebox">
            <div class="modal-header bg-light border-0">
                <h6 class="modal-title fw-bold" id="messageBoxModalLabel">
                    <i id="messageBoxIcon" class="bi bi-info-circle me-2"></i>
                    <span id="messageBoxTitle">Messaggio</span>
                </h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="messageBoxMessage" class="mb-0"></p>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-primary btn-sm" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/esami-main-winforms.js"></script>

    <style>
        /* Stili identici a WinForms */
        .winforms-panel {
            border: 2px solid #c0c0c0;
            border-radius: 0;
            box-shadow: inset -1px -1px #808080, inset 1px 1px #ffffff;
        }

        .winforms-header {
            background: linear-gradient(to bottom, #f0f0f0, #e0e0e0);
            border-bottom: 1px solid #a0a0a0;
            color: #000;
            font-size: 12px;
            font-family: "Segoe UI", Tahoma, sans-serif;
            padding: 4px 8px;
        }

        .winforms-listbox-container {
            border: 2px inset #f0f0f0;
            background-color: white;
            height: 320px;
            overflow: hidden;
        }

        .winforms-listbox {
            border: none;
            outline: none;
            background-color: white;
            font-family: "Segoe UI", Tahoma, sans-serif;
            font-size: 13px;
            height: 100%;
            overflow-y: auto;
            padding: 2px;
        }

            .winforms-listbox option {
                padding: 2px 6px;
                border-bottom: 1px solid #f5f5f5;
            }

                .winforms-listbox option:selected {
                    background-color: #316ac5;
                    color: white;
                }

                .winforms-listbox option:hover {
                    background-color: #e3f2fd;
                }

        .winforms-buttons-container .btn {
            font-size: 11px;
            padding: 4px 8px;
            border-radius: 2px;
            font-family: "Segoe UI", Tahoma, sans-serif;
        }

        .winforms-datagrid-container {
            border: 2px inset #f0f0f0;
            background-color: white;
            max-height: 300px;
            overflow-y: auto;
        }

        .winforms-datagrid {
            font-family: "Segoe UI", Tahoma, sans-serif;
            font-size: 13px;
        }

            .winforms-datagrid th {
                background: linear-gradient(to bottom, #f8f8f8, #e8e8e8);
                border: 1px solid #c0c0c0;
                color: #000;
                font-size: 12px;
                font-weight: normal;
                padding: 4px 6px;
            }

            .winforms-datagrid td {
                border: 1px solid #e0e0e0;
                padding: 3px 6px;
                vertical-align: middle;
            }

            .winforms-datagrid tbody tr:hover {
                background-color: #e3f2fd;
            }

            .winforms-datagrid tbody tr.selected {
                background-color: #316ac5;
                color: white;
            }

        .winforms-messagebox {
            border: 2px solid #c0c0c0;
            border-radius: 0;
            font-family: "Segoe UI", Tahoma, sans-serif;
        }

        .winforms-grid-buttons .btn {
            font-size: 12px;
            padding: 2px 6px;
        }

        .empty-row {
            height: 100px;
        }

        /* Scrollbar personalizzate per ListBox */
        .winforms-listbox::-webkit-scrollbar {
            width: 16px;
        }

        .winforms-listbox::-webkit-scrollbar-track {
            background: #f0f0f0;
            border: 1px solid #c0c0c0;
        }

        .winforms-listbox::-webkit-scrollbar-thumb {
            background: linear-gradient(to bottom, #f0f0f0, #d0d0d0);
            border: 1px solid #a0a0a0;
        }

            .winforms-listbox::-webkit-scrollbar-thumb:hover {
                background: linear-gradient(to bottom, #e0e0e0, #c0c0c0);
            }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .winforms-listbox-container

        {
            height: 250px;
        }

        .col-md-4 {
            margin-bottom: 15px;
        }

        }
    </style>
}